[Unit]
Description=Matrix.org Bot

[Service]
Type=simple
User=matrix-bot
WorkingDirectory=/var/lib/matrix-bot
EnvironmentFile=/etc/default/matrix-bot
ExecStart=/usr/local/bin/matrix-bot -c /etc/matrix-bot/matrix-bot.json -l /var/log/matrix-bot.log
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
